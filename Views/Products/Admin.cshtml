@*@model SpeedoModels.Models.Product*@
@model IEnumerable<SpeedoModels.Models.Product>


@{
    ViewBag.Title = "Admin";
}
<br />
<br />
<br />
<br />
<br /><br />
<br />
<br />


<h2>Admin</h2>





    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />



    <h2>Orders Main</h2>



    @if (User.IsInRole("Administrator"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
    <table class="table table-striped table-hover">
        <tr>
            <th>
                Product ID
            </th>
            <th>
                Product Name
            </th>
            <th>
                Product Description
            </th>
            <th>
                Product Price
            </th>
            <th>
                Product Colour
            </th>
            <th>
                Product Stock
            </th>
        
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
        

                <td>
                    @Html.DisplayFor(modelItem => item.productId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productColour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productStock)
                </td>
             

                @if (User.IsInRole("Administrator"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.productId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.productId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.productId })
                    </td>

                }

                @if (User.IsInRole("StoreManager"))
                {
                    <td>
                        @Html.ActionLink("Change Stock", "Edit", new { id = item.productId }) |
                      
                    </td>

                }
                @if (User.IsInRole("AssistantManager"))
                {
                    <td>
                        @Html.ActionLink("Edit Product", "Edit", new { id = item.productId }) |

                    </td>

                }




            </tr>
        }

    </table>
    <br />

    <div>
        @Html.ActionLink("Back to Home", "Index")
    </div>
